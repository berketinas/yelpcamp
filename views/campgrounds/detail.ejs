<% layout('./layouts/boilerplate') %>

<div class="row">
    <div class="col-6">
        <div class="card">
            <img class="card-img-top" src="<%= campground.image %>" alt="Campground Image">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text">
                    <%= campground.description %>
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info m-1">Edit campground</a>
                <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger m-1">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
    <div class="col-6">
        <h2 class="mt-3">Leave a review</h2>
        <form class="needs-validation mb-3" action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate>
            <div class="mb-1">
                <label class="form-label mb-1" for="rating">Rating</label>
                <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div>
                <label class="form-label mb-1" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success mt-2">Submit</button>
        </form>
        <% for (let review of campground.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <p class="card-text"><%= review.body %></p>
                </div>
            </div>
        <% } %>
    </div>
</div>

