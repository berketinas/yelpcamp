<% layout('./layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/campgrounds" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label mb-0" for="title">Title</label>
                <input class="form-control" id="title" type="text" name="campground[title]" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label mb-0" for="location">Location</label>
                <input class="form-control" id="location" type="text" name="campground[location]" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label mb-0" for="image">Image URL</label>
                <input class="form-control" id="image" type="text" name="campground[image]" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label mb-0" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-prefix">$</span>
                    <input
                        type="text"
                        class="form-control"
                        id="price"
                        name="campground[price]"
                        placeholder="0.00"
                        aria-label="price"
                        aria-describedby="price-prefix"
                        required
                    >
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label mb-0" for="description">Description</label>
                <textarea class="form-control" id="description" type="text" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-1">
                <button class="btn btn-success">Add</button>
            </div>
        </form>
        <a href="/campgrounds">Cancel</a>
    </div>
</div>
